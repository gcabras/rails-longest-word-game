<h1>Longest Word Game!</h1>

<div id="container">
<ul id="grid">
<%@letters.split(" ").each do |letter|%>
  <li><%=letter.upcase%></li>
<%end%>
</ul>

 <form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'hidden_letters', @letters%>
  <%= hidden_field_tag 'hidden_time', @start_time%>
  <label for="attempt">What is the longest word you can find?</label>
  <input type="text" name="attempt">
  <input type="submit" value="Play">
 </form>

</div>
